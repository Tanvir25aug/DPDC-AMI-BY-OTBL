# Node Environment
# Set to 'production' to enable:
#   - Telegram Bot (if ENABLE_TELEGRAM=true)
#   - MS Teams Reports (Batch Monitoring & NOCS Balance)
#   - Strict security policies
# Set to 'development' for local development (disables schedulers and bots)
NODE_ENV=development

# Server Configuration
PORT=3000
API_PREFIX=/api

# PostgreSQL (User Management Database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=dpdc_ami_dev
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=admin

# Oracle Database (Reporting Database - Read Only)
DB_USER=cisread
DB_PASSWORD="cisread#2022"
DB_HOST=c2m-dr-scan
DB_PORT=1521
DB_SERVICE_NAME=c2mprddr2.dpdc.org.bd
DB_CONNECT_STRING=c2m-dr-scan:1521/c2mprddr2.dpdc.org.bd

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_change_in_production
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS Configuration
# For security: In production, ONLY list your actual domain(s)
# Example: https://dpdc-ami.dpdc.org.bd,https://www.dpdc-ami.dpdc.org.bd
# Multiple origins separated by commas (no spaces)
ALLOWED_ORIGINS=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Security
BCRYPT_ROUNDS=10

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000

# Query Execution
MAX_QUERY_EXECUTION_TIME=30000

# Telegram Bot
# Production Bot: @DPDC_AMI_bot - Token: 8575870159:AAHupxIlKBLpBS_7PEY9t41qfeNLdl8tobk
# Dev Bot: @DPDC_AMI_DEV_bot - Token: 7701107244:AAFLI9akjIniU5wHuVdGh5aj1wutsURYMoE
# Set ENABLE_TELEGRAM=true to enable bot (works in development and production)
ENABLE_TELEGRAM=true
TELEGRAM_BOT_TOKEN=7701107244:AAFLI9akjIniU5wHuVdGh5aj1wutsURYMoE

# Microsoft Teams Webhooks (only runs in production when NODE_ENV=production)
# Get webhook URLs from Teams Channel > Connectors > Incoming Webhook
