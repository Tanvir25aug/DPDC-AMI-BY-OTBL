# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000
API_PREFIX=/api

# PostgreSQL (User Management Database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=dpdc_ami_dev
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=admin

# Oracle Database (Reporting Database - Read Only)
DB_USER=cisread
DB_PASSWORD="cisread#2022"
DB_HOST=c2m-dr-scan
DB_PORT=1521
DB_SERVICE_NAME=c2mprddr2.dpdc.org.bd
DB_CONNECT_STRING=c2m-dr-scan:1521/c2mprddr2.dpdc.org.bd

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_change_in_production
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Security
BCRYPT_ROUNDS=10

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000

# Query Execution
MAX_QUERY_EXECUTION_TIME=30000

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
